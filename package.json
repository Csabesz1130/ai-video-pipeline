{
  "name": "ai-video-pipeline",
  "version": "0.1.0",
  "description": "Advanced AI Content Pipeline for Social Video Generation",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "debug": "node scripts/debug.js",
    "debug:advanced": "npx ts-node scripts/debug.ts",
    "debug:quick": "node -e \"console.log('ðŸ” Quick Health Check'); console.log('Node:', process.version); console.log('Platform:', process.platform); console.log('Memory:', Math.round(process.memoryUsage().rss/1024/1024) + 'MB'); const fs=require('fs'); ['package.json','src/index.ts'].forEach(f => console.log(fs.existsSync(f) ? 'âœ…' : 'âŒ', f));\"",
    "debug:performance": "npx ts-node scripts/performance-profiler.ts",
    "debug:security": "npx ts-node scripts/security-scanner.ts",
    "debug:dashboard": "npx ts-node scripts/debug-dashboard.ts",
    "debug:all": "npm run debug:dashboard",
    "monitor": "npx ts-node scripts/monitor.ts start",
    "monitor:check": "npx ts-node scripts/monitor.ts check",
    "monitor:history": "npx ts-node scripts/monitor.ts history",
    "dev:backend": "ts-node-dev --respawn src/index.ts",
    "dev:frontend": "vite --config src/frontend/vite.config.ts",
