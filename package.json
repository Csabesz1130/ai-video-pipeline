{
  "name": "ai-video-pipeline",
  "version": "0.1.0",
  "description": "Advanced AI Content Pipeline for Social Video Generation",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "dev:backend": "ts-node-dev --respawn src/index.ts",
    "dev:frontend": "vite --config src/frontend/vite.config.ts",
    "build:backend": "tsc",
    "build:frontend": "tsc --project src/frontend/tsconfig.json && vite build --config src/frontend/vite.config.ts"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@temporalio/client": "^1.11.7",
    "@temporalio/worker": "^1.8.6",
    "@temporalio/workflow": "^1.8.6",
    "@types/aws-sdk": "^0.0.42",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.1",
    "cloudinary": "^1.41.3",
    "clsx": "^2.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "lucide-react": "^0.525.0",
    "openai": "^4.94.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remotion": "^3.3.100",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.17.30",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
